<h2>New book</h2>
<%= form_with model:book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title,"Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" date-disable-with="Create Book">
  </div>
<% end %>  